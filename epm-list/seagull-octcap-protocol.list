#
# Product specification file for Seagull
#

%product octcap-protocol
%description Signaling Encoder And Generator Universal Load Launcher (Generic Traffic Generator)
%copyright (c)Copyright 2006 Hewlett-Packard Development Company, LP.
%license ../LICENSE.txt
%readme ../README.txt
%version tool-version
%vendor HP
%packager HP OpenCall Software

%system tool-system
%requires seagull-core
%format tool-format

d 555 root bin /opt/seagull/octcap
d 555 root bin /opt/seagull/octcap/config
d 555 root bin /opt/seagull/octcap/scenario
d 555 root bin /opt/seagull/octcap/run
d 777 root bin /opt/seagull/octcap/logs

# library tcap        
f 555 root bin /usr/local/bin/libtrans_octcap.so ../build-version/libtrans_octcap.so        

# run scripts
f 555 root bin /opt/seagull/octcap/run/start_client_itu.ksh ../exe-env/octcap-env/run/start_client_itu.ksh
f 555 root bin /opt/seagull/octcap/run/start_client_ansi.ksh ../exe-env/octcap-env/run/start_client_ansi.ksh
f 555 root bin /opt/seagull/octcap/run/start_server_itu.ksh ../exe-env/octcap-env/run/start_server_itu.ksh
f 555 root bin /opt/seagull/octcap/run/start_server_ansi.ksh ../exe-env/octcap-env/run/start_server_ansi.ksh
f 555 root bin /opt/seagull/octcap/run/external_data.csv ../exe-env/octcap-env/run/external_data.csv


# xml configuration files
f 444 root bin /opt/seagull/octcap/config/octcap-itu-dictionnary.xml ../exe-env/octcap-env/config/octcap-itu-dictionnary.xml
f 444 root bin /opt/seagull/octcap/config/octcap-ansi-dictionnary.xml ../exe-env/octcap-env/config/octcap-ansi-dictionnary.xml

f 444 root bin /opt/seagull/octcap/config/conf.client-itu.xml ../exe-env/octcap-env/config/conf.client-itu.xml
f 444 root bin /opt/seagull/octcap/config/conf.client-ansi.xml ../exe-env/octcap-env/config/conf.client-ansi.xml
f 444 root bin /opt/seagull/octcap/config/conf.server-itu.xml ../exe-env/octcap-env/config/conf.server-itu.xml
f 444 root bin /opt/seagull/octcap/config/conf.server-ansi.xml ../exe-env/octcap-env/config/conf.server-ansi.xml

# xml scenarii files
f 444 root bin /opt/seagull/octcap/scenario/client-itu.xml ../exe-env/octcap-env/scenario/client-itu.xml
f 444 root bin /opt/seagull/octcap/scenario/client-ansi.xml ../exe-env/octcap-env/scenario/client-ansi.xml
f 444 root bin /opt/seagull/octcap/scenario/server-itu.xml ../exe-env/octcap-env/scenario/server-itu.xml
f 444 root bin /opt/seagull/octcap/scenario/server-ansi.xml ../exe-env/octcap-env/scenario/server-ansi.xml

