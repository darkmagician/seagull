%product mbi-protocol
%description Signaling Encoder And Generator Universal Load Launcher (Generic Traffic Generator)
%copyright (c)Copyright 2006 Hewlett-Packard Development Company, LP.
%license ../LICENSE.txt
%readme ../README.txt
%version tool-version
%vendor HP
%packager HP OpenCall Software

%system tool-system
%requires seagull-core
%format tool-format

d 555 root bin /opt/seagull/mbi
d 555 root bin /opt/seagull/mbi/config
d 555 root bin /opt/seagull/mbi/scenario
d 555 root bin /opt/seagull/mbi/run
d 777 root bin /opt/seagull/mbi/logs

# run scripts
f 555 root bin /opt/seagull/mbi/run/start_client.ksh ../exe-env/mbi-env/run/start_client.ksh
f 555 root bin /opt/seagull/mbi/run/start_server.ksh ../exe-env/mbi-env/run/start_server.ksh
f 555 root bin /opt/seagull/mbi/run/start_client_external_data.ksh ../exe-env/mbi-env/run/start_client_external_data.ksh
f 555 root bin /opt/seagull/mbi/run/start_server_external_data.ksh ../exe-env/mbi-env/run/start_server_external_data.ksh
f 555 root bin /opt/seagull/mbi/run/external_data.csv ../exe-env/mbi-env/run/external_data.csv

# xml configuration files
f 444 root bin /opt/seagull/mbi/config/mbi_dictionary_v1_13.xml ../exe-env/mbi-env/config/mbi_dictionary_v1_13.xml
f 444 root bin /opt/seagull/mbi/config/mbi_dictionary_v1_15.xml ../exe-env/mbi-env/config/mbi_dictionary_v1_15.xml
f 444 root bin /opt/seagull/mbi/config/mbi_dictionary_v1_28.xml ../exe-env/mbi-env/config/mbi_dictionary_v1_28.xml
f 444 root bin /opt/seagull/mbi/config/conf.client.xml ../exe-env/mbi-env/config/conf.client.xml
f 444 root bin /opt/seagull/mbi/config/conf.server.xml ../exe-env/mbi-env/config/conf.server.xml
f 444 root bin /opt/seagull/mbi/config/conf.client_external_data.xml ../exe-env/mbi-env/config/conf.client_external_data.xml
f 444 root bin /opt/seagull/mbi/config/conf.server_external_data.xml ../exe-env/mbi-env/config/conf.server_external_data.xml

# xml scenarii files
f 444 root bin /opt/seagull/mbi/scenario/authorize.client.xml ../exe-env/mbi-env/scenario/authorize.client.xml
f 444 root bin /opt/seagull/mbi/scenario/authorize.server.xml ../exe-env/mbi-env/scenario/authorize.server.xml
f 444 root bin /opt/seagull/mbi/scenario/authorize.client_external_data.xml ../exe-env/mbi-env/scenario/authorize.client_external_data.xml
f 444 root bin /opt/seagull/mbi/scenario/authorize.server_external_data.xml ../exe-env/mbi-env/scenario/authorize.server_external_data.xml

