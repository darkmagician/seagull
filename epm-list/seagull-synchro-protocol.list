%product synchro-protocol
%description Signaling Encoder And Generator Universal Load Launcher (Generic Traffic Generator)
%copyright (c)Copyright 2006 Hewlett-Packard Development Company, LP.
%license ../LICENSE.txt
%readme ../README.txt
%version tool-version
%vendor HP
%packager HP OpenCall Software

%system tool-system
%requires seagull-core
%format tool-format

d 555 root bin /opt/seagull/synchro
d 555 root bin /opt/seagull/synchro/config
d 555 root bin /opt/seagull/synchro/scenario
d 555 root bin /opt/seagull/synchro/run
d 777 root bin /opt/seagull/synchro/logs

# run scripts
f 555 root bin /opt/seagull/synchro/run/start_client.ksh ../exe-env/synchro-env/run/start_client.ksh
f 555 root bin /opt/seagull/synchro/run/start_server.ksh ../exe-env/synchro-env/run/start_server.ksh

# xml configuration files
f 444 root bin /opt/seagull/synchro/config/synchro-dictionnary.xml ../exe-env/synchro-env/config/synchro-dictionnary.xml
f 444 root bin /opt/seagull/synchro/config/synchro-dictionnary.xml ../exe-env/synchro-env/config/synchro-dictionnary.xml

f 444 root bin /opt/seagull/synchro/config/conf.client.xml ../exe-env/synchro-env/config/conf.client.xml
f 444 root bin /opt/seagull/synchro/config/conf.server.xml ../exe-env/synchro-env/config/conf.server.xml

# xml scenarii files
f 444 root bin /opt/seagull/synchro/scenario/client.xml ../exe-env/synchro-env/scenario/client.xml
f 444 root bin /opt/seagull/synchro/scenario/server.xml ../exe-env/synchro-env/scenario/server.xml

